<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="panel panel-primary filterable">
                        <div class="panel-heading">
                            <h3 class="panel-title">Sections</h3>
                        </div>
                        <table class="table">
                            <thead>
                                <tr class="filters">
                                    <%= search_form_for @q do |f| %>
                                        <th><%= f.search_field :id_eq, class: "form-control", placeholder: "ID" %></th>
                                        <th><%= f.search_field :order_number_eq, class: "form-control", placeholder: "Order Number" %></th>
                                        <th><%= f.search_field :name_cont, class: "form-control", placeholder: "Title" %></th>
                                        <th><%= f.search_field :description_cont, class: "form-control", placeholder: "Description" %></th>
                                        <th><%= f.search_field :course_title_start, class: "form-control", placeholder: "Section" %></th>
                                        <th><%= f.submit class: "btn btn-primary float-right" %></th>
                                    <% end %>
                                </tr>
                            </thead>
                            <tbody>
                                <% @sections.each do |sec| %>
                                <tr>
                                    <td><%= sec.id %></td>
                                    <td><%= sec.order_number %></td>
                                    <td><%= sec.name %></td>
                                    <td><small><%= sec.description %></small></td>
                                    <td>Course: <%= link_to sec.course.title, course_path(sec.course) %></td>
                                    <td><%= link_to 'Show', course_path(sec.course), class: 'btn btn-primary btn-sm' %> <%= link_to 'Edit', edit_section_path(sec), class: 'btn btn-primary btn-sm' %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <%= will_paginate @section %>
    </div>
</div>
