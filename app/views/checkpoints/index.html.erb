<p id="notice"><%= notice %></p>

<h1>Checkpoints</h1>

<table>
  <thead>
    <tr>
      <th>Section</th>
      <th>Title</th>
      <th>Description</th>
      <th>Order number</th>
      <th>Time to complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkpoints.each do |checkpoint| %>
      <tr>
        <td><%= checkpoint.section_id %></td>
        <td><%= checkpoint.title %></td>
        <td><%= checkpoint.description %></td>
        <td><%= checkpoint.order_number %></td>
        <td><%= checkpoint.time_to_complete %></td>
        <td><%= link_to 'Show', checkpoint %></td>
        <td><%= link_to 'Edit', edit_checkpoint_path(checkpoint) %></td>
        <td><%= link_to 'Destroy', checkpoint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Checkpoint', new_checkpoint_path %>
