<!DOCTYPE html>
<html>
  <head>
    <title>Trestle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://unpkg.com/@coreui/coreui/dist/css/coreui.min.css">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if user_signed_in? && current_user.admin? %>
        <header class="app-header navbar">
          <button class="navbar-toggler sidebar-toggler d-lg-none mr-auto" type="button" data-toggle="sidebar-show">
            <span class="navbar-toggler-icon"></span>
          </button>
          <a href='/'>Trestle Admin</a>
          <button class="navbar-toggler sidebar-toggler d-md-down-none" type="button" data-toggle="sidebar-lg-show">
            <span class="navbar-toggler-icon"></span>
          </button>
          <ul class="nav navbar-nav d-md-down-none">
            <li class="nav-item px-3">
              <%= link_to 'Dashboard', root_path, class: 'nav-link' %>
            </li>
            <li class="nav-item px-3">
              <%= link_to 'Courses', courses_path, class: 'nav-link' %>
            </li>
            <li class="nav-item px-3">
              <%= link_to 'Log out', destroy_user_session_path, class: 'nav-link' %>
            </li>
          </ul>
        
          <ul class="nav navbar-nav ml-auto">
            <li class="nav-item dropdown">
              <%= link_to edit_user_registration_path do %><i class="fa fa-user fa-2x"></i><% end %>
            </li>
          </ul>
        </header>
        <nav class="breadcrumb">
          <% breadcrumb_trail do |crumb| %>
            <%= link_to crumb.name, crumb.url, class: "breadcrumb-item" %>
          <% end %>
        </nav>
          
        <div class='app-body'>
          <div class="sidebar">
            <nav class="sidebar-nav">
              <ul class="nav">
                <li class="nav-title">Navigation</li>
                <li class="nav-item">
                    <%= link_to '<i class="fa fa-user fa"></i> Users'.html_safe, users_path, class: 'nav-link' %>
                </li>
                <li class="nav-item nav-dropdown">
                  <a class="nav-link nav-dropdown-toggle" href="#">
                    Course Building
                  </a>
                  <ul class="nav-dropdown-items">
                    <li class="nav-item">
                      <%= link_to "New Course", new_course_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "All Courses", courses_path, class: "nav-link" %>
                    </li>
                  </ul>
                </li>
              </ul>
            </nav>
        </div>
      <% end %>
      <main class="main">
        <% if flash[:notice] %>
          <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert alert-warning">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:alert] %>
          </div>
        <% end %>
          <div class="animated fadeIn">
            <%= yield %>
          </div>
      </main>
    </div>
  </body>
</html>
