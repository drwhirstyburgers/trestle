<body id="welcome-container-users">
  <%= render 'landing_pages/navbar' %>
  <div class="mdl-grid center-items">
    <div class="mdl-cell mdl-cell--4-col">
      <div class="demo-card-wide mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          <h2 class="mdl-card__title-text">Welcome</h2>
        </div>
        <div class="mdl-card__supporting-text">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mdl-textfield__input"  %>
              <%= f.label :email, class: "mdl-textfield__label"  %>
            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "mdl-textfield__input", style: "color:black" %>
              <%= f.label :first_name, class: "mdl-textfield__label" %>
            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "first name", class: "mdl-textfield__input" %>
              <%= f.label :last_name, class: "mdl-textfield__label" %>
            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.password_field :password, autocomplete: "new-password", class: "mdl-textfield__input" %>
              <%= f.label :password, class: "mdl-textfield__label" %>
            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mdl-textfield__input" %>
              <%= f.label :password_confirmation, class: "mdl-textfield__label" %>
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <%= f.submit "Sign up", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</body>
