<body id="welcome-container-users">
  <%= render 'landing_pages/navbar' %>
  <div class="mdl-grid center-items">
    <div class="mdl-cell mdl-cell--4-col">
      <div class="demo-card-wide mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          <h2 class="mdl-card__title-text">Change your password</h2>
        </div>
        <div class="mdl-card__supporting-text">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "mdl-textfield__input" %>
              <%= f.label :password, "New password", class: "mdl-textfield__label"  %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mdl-textfield__input" %>
              <%= f.label :password_confirmation, "Confirm new password", class: "mdl-textfield__label" %>
            </div>

            <div class="mdl-card__actions mdl-card--border">
              <%= f.submit "Change my password", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>