<body id="welcome-container-users">
 <%= render 'landing_pages/navbar' %>
  <div class="mdl-grid center-items">
    <div class="mdl-cell mdl-cell--4-col">
      <div class="demo-card-wide mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          <h2 class="mdl-card__title-text">Welcome Back!</h2>
        </div>
        <div class="mdl-card__supporting-text">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :email, class: "mdl-textfield__label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mdl-textfield__input" %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password, class: "mdl-textfield__label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "mdl-textfield__input" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="mdl-card__actions mdl-card--border">
              <%= f.submit "Sign in", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</body>